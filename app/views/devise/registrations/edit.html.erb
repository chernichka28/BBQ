<div class="row justify-content-center">
  <div class="bg-light col-lg-6 col-md-8 px-5 py-3 rounded-5">
    <h2><%= I18n.t("views.user.edit") %></h2>

    <div class="row">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field my-3 col-md-6 col-sm-8">
          <i class="icon-envelope mx-1"></i>
          <%= f.label :Email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field my-3 col-md-6 col-sm-8">
          <i class="icon-lock mx-1"></i>
          <%= f.label :Пароль %> <i>(оставьте поле пустым, если не хотите менять)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-2" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> символов минимум</em>
          <% end %>
        </div>

        <div class="field my-3 col-md-6 col-sm-8">
          <i class="icon-lock mx-1"></i>
          <%= f.label :Подтверждение_пароля %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mt-2" %>
        </div>

        <div class="field my-3 col-md-6 col-sm-8">
          <i class="icon-lock mx-1"></i>
          <%= f.label :Текущий_пароль %> <i>(он нужен для подтверждения)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control mt-2" %>
        </div>

        <div class="actions col-md-6 col-sm-8 mb-3">
          <%= f.submit "Изменить", class: "btn btn-primary", data: { turbo: false } %>
        </div>
      <% end %>

      <h3>Удалить мой аккаунт</h3>

      <p>Не понравилось? <%= button_to "Удалить", registration_path(resource_name), data: { turbo_confirm: t("confirmation.messages.user") }, method: :delete, class: "btn btn-danger" %></p>

      <%= link_to "Назад ", :back %>
    </div> 
  </div>
</div>
