<div class="row justify-content-center">
  <div class="bg-light col-lg-6 col-md-8 px-5 py-3 rounded-5">
    <h2>Войти</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field my-3 col-md-6 col-sm-8">
        <i class="icon-envelope mx-1"></i>
        <%= f.label :Email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2" %>
      </div>

      <div class="field my-3 col-md-6 col-sm-8">
        <i class="icon-lock mx-1"></i>
        <%= f.label :Пароль %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "form-check-input my-2" %>
          <%= f.label :Запомнить_меня, class: "my-1" %>
        </div>
      <% end %>

      <div class="actions col-md-6 col-sm-8">
        <%= f.submit "Войти", class: "btn btn-primary my-2" %>
      </div>
    <% end %>
    
    <div class="py-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
