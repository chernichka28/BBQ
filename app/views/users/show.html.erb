<div class="text-center">
  <%= image_tag user_avatar(@user), class: "mt-5 rounded-circle border Regular shadow" %>
  <h1 class="my-4"><%= @user.name %></h1>

  <% if @user == current_user %>
    <p class="buffer-top"><%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-success' %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3 class="my-4">Организовал:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">Пользователь пока не организовал ни одного события</p>
      <% end %>
    </div>
  </div>
</div>
