<div class="buffer-bottom row bg-light rounded-5 px-5">
  <div class="col-md-8">
    <%= form_for [@event, comment] do |f| %>
        <%= render partial: 'partials/form_errors', locals: {model: comment} %>

        <div class="form-group">
          <%= f.label :Текст_комментария, class: "my-2" %>
          <%= f.text_area :body, class: "form-control my-1" %>
        </div>

        <% unless user_signed_in? %>
            <div class="form-group">
              <%= f.label :user_name %>
              <%= f.text_field :user_name, class: "form-control my-2" %>
            </div>
        <% end %>

        <div class="actions">
          <%= f.submit 'Отправить', data: {turbo: false}, class: "btn btn-primary my-2" %>
        </div>
    <% end %>
  </div>
</div>  
