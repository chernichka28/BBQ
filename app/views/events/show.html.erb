<div class="event">
  <div class="event-info row rounded-5">
    <div class="col-md-12">
      <%= content_tag "div", "", class: "event-background rounded-5",
        style: "background-image: url(#{event_photo(@event)})" %>

      <div class="event-info-inner row py-5 rounded-5 px-5">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :long %></h3>
            <h3><small><%= link_to @event.address,
                "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="buffer-both">
              <%= link_to "Изменить", edit_event_path(@event),
                class: "btn btn-primary" %>
            </div>

            <div class="buffer-both">
              <%= button_to "Удалить", event_path(@event), method: :delete, data: { turbo_confirm: t("confirmation.messages.event") }, class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-7 mx-1">
      <div class="event-photos-gallery">
        <%= render partial: 'photos/photo', collection: @event.photos.except(@new_photo) %>
      </div>
      
      <% if current_user.present? %>
        <div class="event-photo-form">
          <%= render partial: 'photos/form', locals: {photo: @new_photo || @event.photos.build} %>
        </div>
      <% end %>

      <div class="event-comments buffer-top">
        <%= render partial: 'comments/form',
          locals: {comment: @new_comment || @event.comments.build} %>

        <div class="buffer-both">
          <%= render partial: 'comments/comment',
            collection: @event.comments.except(@new_comment) %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class=" mx-3 mt-3 rounded-5 bg-light py-3 px-3">
        <div class="event-owner px-2">
          <h4 class="mt-3">Зовёт:</h4>
            <p><%= render partial: 'users/user', object: @event.user %></p>
        </div>

        <% unless @event.subscriptions.count == 0 %>
          <div class="event-subscriptions">
            <h4>Пойдут:</h4>
            <div>
              <p>
              <%= render partial: "subscriptions/subscription",
                collection: @event.subscriptions.except(@new_subscription) %>
              </p>
            </div>
          </div>
        <% end %>

        <% unless current_user_can_edit?(@event) %>
          <div class="event-subscription-form">
            <h4>Я пойду:</h4>
            <div>
              <%= render partial: "subscriptions/form", locals: {
                subscription: @new_subscription || @event.subscriptions.build
              } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
