<%= form_for [@event, subscription] do |f| %>
    <%= render partial: "partials/form_errors", locals: { model: subscription } %>

    <% unless policy(subscription).create? %>
        <div class="form-group">
          <%= f.label t("views.subscription.name") %>
          <%= f.text_field :user_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label t("views.subscription.email") %>
          <%= f.text_field :user_email, class: "form-control" %>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("views.subscription.create"), data: { turbo: false }, class: "btn btn-primary mt-3 mb-5" %>
    </div>
<% end %>
